{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Chofer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Appaterno</th>
                <th>Apmaterno</th>
                <th>Rut</th>
                <th>Dv</th>
                <th>Telefono</th>
                <th>Celular</th>
                <th>Mail</th>
                <th>Direccion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chofer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apPaterno }}</td>
                <td>{{ entity.apMaterno }}</td>
                <td>{{ entity.rut }}</td>
                <td>{{ entity.dv }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.celular }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.direccion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chofer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chofer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chofer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
