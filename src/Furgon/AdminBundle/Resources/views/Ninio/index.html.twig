{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ninio list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Appaterno</th>
                <th>Apmaterno</th>
                <th>Fechanacimiento</th>
                <th>Colegio</th>
                <th>Celular</th>
                <th>Rut</th>
                <th>Dv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ninio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apPaterno }}</td>
                <td>{{ entity.apMaterno }}</td>
                <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.colegio }}</td>
                <td>{{ entity.celular }}</td>
                <td>{{ entity.rut }}</td>
                <td>{{ entity.dv }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ninio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ninio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ninio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
